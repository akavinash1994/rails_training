
<h1>Edit user</h1>
 
<%= form_for @user, :html => { :multipart => true } do |f| %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
  <p>
  <%= f.label :photo, "Photo" %>
  <%= f.file_field :photo %>
  </p>

  <p>
    <%= f.submit %>
  </p>

 <% end %>
